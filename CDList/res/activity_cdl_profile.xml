<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFDAB9" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/name"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tvdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DATE:" />

                <EditText
                    android:id="@+id/etDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="date" >

                    <requestFocus />
                </EditText>

                <TextView
                    android:id="@+id/tvbday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BirthDay:" />

                <EditText
                    android:id="@+id/etBday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="date" />

                <TextView
                    android:id="@+id/tvwphone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Work Phone:" />

                <EditText
                    android:id="@+id/etWPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="phone" />

                <TextView
                    android:id="@+id/tvhphone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Home Phone:" />

                <EditText
                    android:id="@+id/etHPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="phone" />

                <TextView
                    android:id="@+id/tvadd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address:" />

                <EditText
                    android:id="@+id/etAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Ex: 1 w nowhere ST \n city, state zip"
                    android:inputType="textMultiLine" />

                <TextView
                    android:id="@+id/tvcphone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cell#:" />

                <EditText
                    android:id="@+id/etCPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="phone" />

                <TextView
                    android:id="@+id/tvemail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email:" />

                <EditText
                    android:id="@+id/etEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textEmailAddress" />

                <TextView
                    android:id="@+id/tvoccemp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Occupation/Employer:" />

                <EditText
                    android:id="@+id/etOccEmp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10" />

                <TextView
                    android:id="@+id/tvpreferred"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Preferred:" />

                <EditText
                    android:id="@+id/etPreferred"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Appt.Day/Time" />

                <TextView
                    android:id="@+id/tvallergies"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Allergies:" />

                <EditText
                    android:id="@+id/etAllergies"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textMultiLine" />

                <TextView
                    android:id="@+id/tvcomprods"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Common hair care products used:" />

                <EditText
                    android:id="@+id/etComProds"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="(shampoo,spray,gel,etc.)"
                    android:inputType="textMultiLine" />

                <TextView
                    android:id="@+id/tvcomret"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Coommon retail products purchased:" />

                <EditText
                    android:id="@+id/etComRet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textMultiLine" />

                <TextView
                    android:id="@+id/tvreferred"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Referred by:" />

                <EditText
                    android:id="@+id/etReferred"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName" />

                <TextView
                    android:id="@+id/tvremarks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Clients Remarks:" />

                <EditText
                    android:id="@+id/etRemarks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textMultiLine" />
            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/bSave"
            style="@style/button_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/activity_clientdl_custom_button"
            android:text="@string/bsave" />
    </LinearLayout>

</RelativeLayout>